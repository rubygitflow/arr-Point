<div class="columns">
  <div class="column col-4 col-mx-auto card minw-250">
    <div class="card-header">
      <h2><%= t('devise.registrations.title_sign_up') %></h2>
      <h6><%= t('devise.registrations.title_sign_up_attention') %></h6>
    </div>

    <%= form_for(resource, as: resource_name, 
      url: registration_path(resource_name), 
      html: {class: "card-body"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, t('devise.registrations.lbl_email').html_safe, 
        class: "form-label" %>
        <%= f.email_field :email, value: 
          "#{resource.email.empty? ? resource.random_email : resource.email}", 
          autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, t('devise.registrations.lbl_phone'), 
        class: "form-label" %>
        <%= f.text_field :phone, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :name, t('devise.registrations.lbl_name'), 
        class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :role, t('devise.registrations.lbl_role'), 
        class: "form-label" %>
        <%= f.select :role, [["Driver", "Driver"], ["Passenger", "Passenger"]], 
        {include_blank: "#{t('devise.registrations.select_role')}"}, 
        class: "form-select" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" do %>  
          <%= t("devise.shared.lbl_password") %>        
          <% if @minimum_password_length %>
            <em>
              <%= t('devise.shared.minimum_password_length', 
              count: @minimum_password_length) %>
            </em>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
        class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 
        t("devise.registrations.lbl_password_conf"), class: "form-label" %>
        <%= f.password_field :password_confirmation, 
          autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="form-flex-hor-group" >
        <%= f.check_box :role_rules_accepted, class: "check-icon" %>
        <%= f.label :role_rules_accepted, 
        ("<small>"+t('devise.registrations.rules_accepted')+"</small>")
        .html_safe, 
        class: "check-label" %>
      </div>


      <div class="actions">
        <%= f.button t('devise.registrations.btn_sign_up'), type: "submit", 
        class: "btn btn-block btn-primary mb-2 mt-2" %>
      </div>
    <% end %>

    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
