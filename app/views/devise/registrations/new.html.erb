<div class="columns">
  <div class="column col-6 col-mx-auto card">
    <div class="card-header">
      <h5 class="text-center"><%= t('devise.registrations.title_sign_up') %></h5>
    </div>

    <%= form_for(resource, as: resource_name, 
      url: registration_path(resource_name), 
      html: {class: "card-body"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, t('devise.registrations.lbl_phone'), 
        class: "form-label" %>
        <%= f.text_field :phone, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :name, t('devise.registrations.lbl_name'), 
        class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="form-group" >
        <label class="form-radio form-inline">
          <%= f.radio_button :role, "Driver", :checked=>"checked", 
          id: "user_driver" %>
            <i class="form-icon"></i> 
            <%= t('driver') %> 
        </label>
        <label class="form-radio form-inline">
          <%= f.radio_button :role, "Passenger", id: "user_passenger" %>
            <i class="form-icon"></i> 
            <%= t('passenger') %> 
        </label>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" do %>  
          <%= t("devise.shared.lbl_enter_password") %>    
          <% if @minimum_password_length %>
            <%= t('devise.shared.minimum_password_length', 
            count: @minimum_password_length) %>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
        class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 
        t("devise.registrations.lbl_password_conf"), class: "form-label" %>
        <%= f.password_field :password_confirmation, 
          autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="form-flex-hor-group" >
        <%= f.check_box :role_rules_accepted, class: "check-icon" %>
        <%= f.label :role_rules_accepted, 
        ("<small>"+t('devise.registrations.rules_accepted')+"</small>")
        .html_safe, 
        class: "check-label" %>
      </div>

      <br>
      <div class="actions">
        <%= f.button t('devise.registrations.btn_sign_up'), type: "submit", 
        class: "btn btn-block btn-primary mb-2 mt-2" %>
      </div>
      <br>
    <% end %>

<!--     <div class="card-footer">
      <div class="text-center text-uppercase">
        <%= render "devise/shared/links" %>
      </div> -->
    </div>
  </div>
</div>
